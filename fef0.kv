<MainScreen>:
    BoxLayout:
        spacing: 15
        padding: 20
        orientation: 'vertical'
        Label:
            text: 'Calculadora Química'
            font_size: root.width/10
        Button:
            background_color: 0, 1.35, 0.55, 1
            text: 'Datos de un elemento'
            on_press: root.manager.current = 'funct1'
            pos_hint: {'x': .15}
            size_hint: .7,.6
            font_size: self.width/12
        Button:
            background_color: 0, 1.35, 0.55, 1
            text: 'Diferencia de En'
            on_press: root.manager.current = 'funct2'
            pos_hint: {'x': .15}
            size_hint: .7,.6
            font_size: self.width/12
        Button:
            background_color: 0, 1.35, 0.55, 1
            text: 'Masa molar'
            on_press: root.manager.current = 'funct3'
            pos_hint: {'x': .15}
            size_hint: .7,.6
            font_size: self.width/12
        Button:
            background_color: 0, 1.35, 0.55, 1
            text: 'Ver todos los elementos'
            on_press: root.manager.current = 'funct5'
            pos_hint: {'x': .15}
            size_hint: .7,.6
            font_size: self.width/12
        Button:
            background_color: 0, 1.35, 0.55, 1
            text: 'Salir'
            on_press: exit()
            pos_hint: {'x': .3}
            size_hint: .4,.5
            font_size: self.width/8
        

<Function1>:
    BoxLayout:
        orientation: 'vertical'
        elemento: ''
        spacing: 15
        padding: 20
        Label:
            font_size: root.width/24
            text_size: root.width/1.2, None
            text: 'Ingrese el símbolo químico del elemento del cual quiere conocer sus datos.'
        TextInput:
            id: elem
            size_hint: .6, .2
            font_size: self.height/1.8
            pos_hint: {'x': .2}
            multiline: False
            on_text_validate: root.data(elem.text)
        Label:
            text: root.datos
            font_size: root.width/30
            text_size: root.width/1.35, None
        Button:
            background_color: 0, 1.35, 0.55, 1
            text: 'Mostrar'
            font_size: self.width/7
            on_press: root.data(elem.text)
            pos_hint: {'x': .25}
            size_hint: .5,.4
        Button:
            background_color: 0, 1.35, 0.55, 1
            text: 'Back to menu'
            font_size: self.width/10
            pos_hint: {'x': .3}
            size_hint: .4,.3
            on_press: root.manager.current = 'main'


<Function2>:
    simbolo1: ''
    simbolo2: ''
    BoxLayout:
        spacing: 5
        orientation: 'vertical'
        Label:
            text: 'Diferencia de Electronegatividad'
            font_size: self.width/20
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Primer Simbolo'
                font_size: self.width/12 

            Label:
                text: 'Segundo Simbolo'
                font_size: self.width/12

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .5
            Label:

            TextInput:
                id: PrimerSimbolo
                text: ''
                multiline: False
                font_size: self.height/2
                on_text: root.simbolo1 = self.text
                on_text_validate: root.difEn(root.simbolo1, root.simbolo2)
                size_hint: 2, .7

            Label:
                size_hint: 3, .1

            TextInput:
                id: PrimerSimbolo
                multiline: False
                text: ''
                font_size: self.height/2
                on_text: root.simbolo2 = self.text
                on_text_validate: root.difEn(root.simbolo1, root.simbolo2)
                size_hint: 2, .7
            
            Label:

        Label:
            size_hint: 1, .5

        


        Label:
            text: root.Diferencia
            font_size: root.width/28

        Button:
            background_color: 0, 1.35, 0.55, 1
            text: 'Calcular'
            font_size: self.height/2.3
            pos_hint: {'x': .25}
            size_hint: .5,.4
            on_press: root.difEn(root.simbolo1, root.simbolo2)

        Label:
            size_hint: 1, .1

        Button:
            background_color: 0, 1.35, 0.55, 1
            text: 'Back to menu'
            font_size: self.height/2.3
            pos_hint: {'x': .3}
            size_hint: .4,.3
            on_press: root.manager.current = 'main'

        Label:
            size_hint: 1, .1

<Function3>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 15
        padding: 20
        
        Label:
            font_size: root.width/24
            text_size: root.width/1.2, None
            text: 'Ingrese la fórmula a conocer, respetando las mayúsuclas y minúsculas en los símbolos y usando números normales a modo de subíndices.'
        TextInput:
            id: formula
            size_hint: .6, .2
            font_size: self.height/1.8
            pos_hint: {'x': .2}
            multiline: False
            on_text_validate: root.calcMasa(formula.text)
        Label:
            text: root.datos
            font_size: root.width/30
            text_size: root.width/1.35, None
        Button:
            background_color: 0, 1.35, 0.55, 1
            text: 'Mostrar'
            font_size: self.width/7
            on_press: root.calcMasa(formula.text)
            pos_hint: {'x': .25}
            size_hint: .5,.4
        Button:
            background_color: 0, 1.35, 0.55, 1
            text: 'Back to menu'
            font_size: self.width/10
            pos_hint: {'x': .3}
            size_hint: .4,.3
            on_press: root.manager.current = 'main'



<Function5>:
    hecho: False
    on_pre_enter: (root.fillIn(scroll, self.hecho))
    on_enter: self.hecho = True
    GridLayout:
        spacing: 10
        padding: 5
        orientation: 'tb-lr'
        id: gd_lyt
        cols: 1
        rows: 2
        BoxLayout:
            size_hint: 1, .1
            Label:
            Button:
                background_color: 0, 1.35, 0.55, 1
                on_press: root.manager.current = 'main' 
                text: 'Back to menu'
            Label:
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            id: scroll
            Label:
                size_hint_y: None
                size: self.texture_size
                padding: 10, 10    
                text: root.final
